{% extends "master.jinja" %}

{% block extra_css %}
    <link rel="stylesheet" type="text/css" href="/builder/builder.css">
    <link rel="stylesheet" type="text/css" href="/builder/farbtastic/farbtastic.css">
    <link rel="stylesheet" type="text/css" href="/builder/jquery-ui.css">
{% endblock %}

{% block extra_js %}
    <script src="/builder/jquery-ui.js"></script>
    <script type="text/javascript" src="/builder/farbtastic/farbtastic.js"></script>
    <script type="text/javascript" src="/builder/builder.js"></script>
{% endblock %}

{% block title %}HackDanceville Builder{% endblock %}

{% block contents %}
    <div id="wrapper">
        <h1>Hack Danceville</h1>
        <div id="frame_rate"></div>
        <div> Current Frame </div>
        <div id="builder"></div>
        <div id="color_picker">
            <div id="color"></div>
            <input type="text" id="colorValue" style="width:100px;" /><br />
            <input type="button" value="Clear" id="clearButton" />
            <input type="button" value="Save Frame" id="saveFrame" />
        </div>
        <div id="frames_holder">
            Frames
            <div id="frames"></div>
        </div>
        <div id="display_wrapper">
            <input type="button" value="Display" id="displayButton" />
            <input type="button" value="Stop" id="stopButton" style="display:none;" />
        </div>
    </div>
{% endblock %}
